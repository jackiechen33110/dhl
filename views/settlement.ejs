    }

    // é¡µé¢åŠ è½½æ—¶è·å–æ•°æ®
    loadSettlement(1);

    // ç‚¹å‡»æ¨¡æ€æ¡†å¤–éƒ¨å…³é—­
    window.onclick = function(event) {
      const modal = document.getElementById('refundModal');
      if (event.target === modal) {
