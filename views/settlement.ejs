  <script>
    let currentPage = 1;
    let currentShipmentId = null;
    const itemsPerPage = 20;

    async function loadSettlement(page = 1) {
      try {
        const status = document.getElementById('statusFilter').value;
        const search = document.getElementById('searchInput').value;

        const params = new URLSearchParams({
          page,
          limit: itemsPerPage,
          status: status || undefined,
          search: search || undefined
        });

        const response = await fetch(`/api/settlement/list?${params}`);
        const result = await response.json();

        if (result.ok) {
          renderSettlementTable(result.data);
          renderPagination(result.pagination);
          updateStats(result.stats);
        }
      } catch (err) {
        console.error('åŠ è½½ç»“ç®—æ•°æ®å¤±è´¥:', err);
      }
    }

    function renderSettlementTable(data) {
      const tbody = document.getElementById('settlementTable');

      if (data.length === 0) {
        tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 40px;">æš‚æ— æ•°æ®</td></tr>';
        return;
      }

      tbody.innerHTML = data.map(item => `
        <tr>
          <td><strong>${item.order_no || 'æœªçŸ¥'}</strong></td>
          <td>${item.customer_name || 'æœªçŸ¥'}</td>
          <td>${item.dhl_tracking_no || 'æœªåˆ†é…'}</td>
          <td><span class="status-badge status-${item.settlement_status}">${getStatusText(item.settlement_status)}</span></td>
          <td>${item.no_tracking_days || 0} å¤©</td>
          <td>${formatDate(item.last_tracking_date)}</td>
          <td>
            <div class="action-buttons">
              <button class="btn btn-primary" onclick="viewDetails(${item.shipment_id})">è¯¦æƒ…</button>
              ${item.settlement_status === 'no_tracking' ? `
                <button class="btn btn-success" onclick="openRefundModal(${item.shipment_id}, '${item.order_no}')">é€€æ¬¾</button>
              ` : ''}
            </div>
          </td>
        </tr>
      `).join('');
    }

    function updateStats(stats) {
      document.getElementById('totalCount').textContent = stats?.total || 0;
      document.getElementById('trackingCount').textContent = stats?.tracking || 0;
      document.getElementById('noTrackingCount').textContent = stats?.no_tracking || 0;
      document.getElementById('refundedCount').textContent = stats?.refunded || 0;
    }

    function renderPagination(pagination) {
      const container = document.getElementById('pagination');
      let html = '';

      if (pagination.page > 1) {
        html += `<a onclick="loadSettlement(${pagination.page - 1})">â† ä¸Šä¸€é¡µ</a>`;
      }

      for (let i = 1; i <= pagination.pages; i++) {
        if (i === pagination.page) {
          html += `<span class="active">${i}</span>`;
        } else if (i <= 5 || i > pagination.pages - 5 || Math.abs(i - pagination.page) <= 2) {
          html += `<a onclick="loadSettlement(${i})">${i}</a>`;
        } else if (i === 6) {
          html += `<span>...</span>`;
        }
      }

      if (pagination.page < pagination.pages) {
        html += `<a onclick="loadSettlement(${pagination.page + 1})">ä¸‹ä¸€é¡µ â†’</a>`;
      }

      container.innerHTML = html;
    }

    function getStatusText(status) {
      const texts = {
        'tracking': 'è¿½è¸ªä¸­',
        'no_tracking': 'æ— è½¨è¿¹',
        'refunded': 'å·²é€€æ¬¾'
      };
      return texts[status] || 'æœªçŸ¥';
    }

    function formatDate(date) {
      if (!date) return '-';
      return new Date(date).toLocaleDateString('zh-CN');
    }

    function filterSettlement() {
      currentPage = 1;
      loadSettlement(1);
    }

    function viewDetails(shipmentId) {
      window.location.href = `/shipments/detail/${shipmentId}`;
    }

    function openRefundModal(shipmentId, orderNo) {
      currentShipmentId = shipmentId;
      document.getElementById('refundOrderNo').value = orderNo;
      document.getElementById('refundAmount').value = '';
      document.getElementById('refundReason').value = 'æ— è½¨è¿¹è¶…è¿‡90å¤©';
      document.getElementById('refundModal').classList.add('show');
    }

    function closeRefundModal() {
      document.getElementById('refundModal').classList.remove('show');
    }

    async function submitRefund(event) {
      event.preventDefault();

      const amount = document.getElementById('refundAmount').value;
      const reason = document.getElementById('refundReason').value;

      try {
        const response = await fetch('/api/tracking/generate-refund', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            shipment_id: currentShipmentId,
            refund_amount: amount,
            reason
          })
        });

        const result = await response.json();

        if (result.ok) {
          alert('é€€æ¬¾å•å·²ç”Ÿæˆ');
          closeRefundModal();
          loadSettlement(currentPage);
        } else {
